<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.details.PokemonDetailFragment">


        
        
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white">


                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="16dp"
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/pokemon_details_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bleulight"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:text="Bulbizare" />


                        <TextView
                            android:id="@+id/pokemon_height"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/bleulight"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="Height" />


                        <TextView
                            android:id="@+id/pokemon_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/bleulight"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="Weight" />



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/bleulight"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="Type" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_type"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"></androidx.recyclerview.widget.RecyclerView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/bleulight"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="Weak" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_weakness"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"></androidx.recyclerview.widget.RecyclerView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/bleulight"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="Prev Evolution" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_prev_evolution"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"></androidx.recyclerview.widget.RecyclerView>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/bleulight"
                            android:layout_marginBottom="10dp"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="Next Evolution" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_next_evolution"

                            android:layout_width="match_parent"
                            android:layout_height="40dp"></androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>

        </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/pokemon_picture"
                    android:layout_alignTop="@+id/cardView"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-50dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>
        </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>